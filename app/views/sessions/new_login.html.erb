<h1>Welcome to B@ckLg</h1>

<h3>User Login</h3>

<%
=begin%>
 <% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>

<% if flash[:not_authorized] %>
  <p><%= flash[:not_authorized] %></p>
<% end %> 
<%
=end%>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<%= form_for :session do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.submit %>
<% end %>
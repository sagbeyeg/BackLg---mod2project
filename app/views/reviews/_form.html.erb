<%if flash[:error]%>
    <%flash[:error].each do |error|%>
        <p><%=error%></p>
    <%end%>
<%end%>

<%= form_for @review do |f| %>
  <p>
    For: <%= f.collection_select :game_id, Game.all, :id, :name %>
  </p>

  <p>
    Rating: <%= f.number_field :rating %>
  </p>

  <p>
    Title: <%= f.text_field :title %>
  </p>

  <p>
    Description: <%= f.text_area :description %>
  </p>

  <%= f.submit %>
<% end %>

<div class="page_title">
    <h1>All Games</h1>
</div>



<%if flash[:errors]%>
    <%flash[:errors].each do |error|%>
        <p><%=error%></p>
    <%end%>
<%end%>

<div id="search_form">
    <%= form_tag(games_path, :method => "get") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Games" %>
        <%= submit_tag "Search" %>
    <% end %>
</div>


<%
=begin%>
 <div class="container my-4">
  <div class="row">
    <% @games.each do |game|%>
            <div id= "game_card" class="col-lg-4 col-md-12 mb-4">
                <%= image_tag  "#{game.image_url}" %>
                <%=link_to  "#{game.name}", game_path(game) %>
            </div>
    <% end %>
  </div>
</div> 
<%
=end%>
<div class="container my-4">
    <div class="row">
        <% @games.each do |game|%>
            <div class="col-md-4" style="margin-bottom: 15px; text-align:center;">
                <div class="card h-100 shadow-lg">
                    <img src= <%= game.image_url %> class="card-img-top">
                    <div class="card-body bg-dark text-light">
                        <h5 class="text-center" class="card-text"><%= link_to "#{game.name}", game_path(game) %></h5>
                        <br>
                        <li class="card-text"><strong>Rating:</strong> <%= game.rating %></li>
                        <li class="card-text"><strong>Genre:</strong> <%= game.genre %></li>
                        <li class="card-text"><strong>Number of Ratings:</strong> <%= game.rating_count %></li>
                        <br>
                    </div>
                </div>
            </div>
        <% end%>
    </div>
</div>







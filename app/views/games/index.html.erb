
<div class="page_title">
    <h1>All Games</h1>
</div>



<div class="text-center text-danger">
    <%if flash[:errors]%>
        <%flash[:errors].each do |error|%>
            <p><%=error%></p>
        <%end%>
    <%end%>
</div>


<div id="search_form">
    <%= form_tag(games_path, :method => "get") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Games" %>
        <%= submit_tag "Search" %>
    <% end %>
</div>

<div class="container my-4">
    <div class="row">
        <% @games.each do |game|%>
            <div class="col-md-4" style="margin-bottom: 15px;">
                <div class="card shadow">
                    <img src= <%= game.image_url %> class="card-img-top">
                    <div class="card-body bg-dark text-light">
                        <h5 class="text-center" class="card-text"><%= link_to "#{game.name}", game_path(game) %></h5>
                        <br>
                        <li class="card-text"><strong>Rating:</strong> <%= game.rating %></li>
                        <li class="card-text"><strong>Genre:</strong> <%= game.genre %></li>
                        <li class="card-text"><strong>Number of Ratings:</strong> <%= game.rating_count %></li>
                        <br>
                    </div>
                </div>
            </div>
        <% end%>
    </div>
</div>






